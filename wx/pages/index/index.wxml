<!--index.wxml-->
<view class="container">
  <view class="userinfo">
    <button wx:if="{{!hasUserInfo && canIUse}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo"> 获取头像昵称 </button>
    <block wx:else>
      <image bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
      <text class="userinfo-nickname">{{userInfo.nickName}}</text>
    </block>
  </view>
  <view class="usermotto">
    <text class="user-motto" bindtap='changemotto'>{{motto}}</text>
  </view>
  <view>
    <text>{{msg}}</text>
  </view>
  <view>
    <button type="warn" size="{{warnSize}}" loading="{{loading}}" plain="{{plain}}" bindtap="gotoHome">点我</button>
  </view>
    <map id="map" longitude="113.4130708748" latitude="23.0540551376" scale="14" controls="{{controls}}" bindcontroltap="controltap" markers="{{markers}}" bindmarkertap="markertap" polyline="{{polyline}}" bindregionchange="regionchange" show-location style="width: 100%; height: 300px;"></map>

</view>